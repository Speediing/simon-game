{
  "redirects": [
    {
      "source": "/asdf/:slug",
      "has": [],
      "destination": "/blog/:slug",
      "permanent": true
    },
    {
      "source": "/old-path",
      "has": [
        { "type": "query", "key": "id" },
        { "type": "cookie", "key": "is_legacy", "value": "*" },
        { "type": "cookie", "key": "my_other_cookie", "value": "*" }
      ],
      "destination": "/new-path",
      "permanent": false
    }
  ],
  "rewrites": [{ "source": "/(.*)", "has": [], "destination": "/index.html" }],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://www.facebook.com"
        },
        {
          "key": "cache-control",
          "value": "  max-age=0,\n  no-cache,\n  no-store,\n  must-revalidate"
        },
        {
          "key": "Basic-Auth",
          "value": "someuser:somepassword anotheruser:anotherpassword"
        }
      ]
    }
  ]
}
