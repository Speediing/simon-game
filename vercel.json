{
  "redirects": [
    {
      "source": "/^(?:\\/(.*))[\\/#\\?]?$/i",
      "has": [],
      "destination": "/^\\/blog(?:\\/([^\\/#\\?]+?))[\\/#\\?]?$/i",
      "permanent": true
    },
    {
      "source": "/^\\/old-path[\\/#\\?]?$/i",
      "has": [
        { "type": "query", "key": "id" },
        { "type": "cookie", "key": "is_legacy", "value": "*" },
        { "type": "cookie", "key": "my_other_cookie", "value": "*" }
      ],
      "destination": "/^\\/new-path[\\/#\\?]?$/i",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/^(?:\\/(.*))[\\/#\\?]?$/i",
      "has": [],
      "destination": "/^\\/index\\.html[\\/#\\?]?$/i"
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://www.facebook.com"
        },
        {
          "key": "cache-control",
          "value": "  max-age=0,\n  no-cache,\n  no-store,\n  must-revalidate"
        },
        {
          "key": "Basic-Auth",
          "value": "someuser:somepassword anotheruser:anotherpassword"
        }
      ]
    }
  ]
}
